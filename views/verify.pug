doctype html
html
    head
        title Verify Identity | IdentifyMe
        include includes/head
    body
        include includes/navbar
        div.container.text-start.d-flex.justify-content-center.mt-5.mb-5
            div.verify-form
                div.row
                    h3.label.mb-4 Verify Identity
                if message
                    div.alert.alert-danger.d-flex.align-items-center(role='alert')
                        div <strong>Beware!</strong> #{message}
                div.row
                    form(action='/viewProfile', method='GET')
                        label.form-label(for='tb_code') Identification Code
                        div.input-group
                            input#tb_code.form-control(type='text', name='code', placeholder='SG12345678Z', value=search)
                            input.btn.btn-custom(type='submit', value="Verify")