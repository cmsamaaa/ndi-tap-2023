doctype html
html
    head
        title #{fullName} | IdentifyMe
        include includes/head
        link(rel='stylesheet', href='/css/profile.css')
    body
        include includes/navbar
        div.container.text-start.d-flex.justify-content-center.mt-5
            div.card.profile-card
                div.profile-banner
                    img.card-img-top(src='/img/IdentifyMe-logo.png')
                div.card-body
                    div.row
                        div.col-4
                            div.row.mx-auto.justify-content-center
                                img.profile-image(src='/img/man-silhoutte.jpg')
                        div.col-8.my-auto
                            div.row
                                div.col-5.fw-bold Identification Code
                                div.col-7 #{code}
                            div.row
                                div.col-5.fw-bold Full Name
                                div.col-7 #{fullName}
                            div.row
                                div.col-5.fw-bold Sex
                                div.col-7 #{sex}
                            div.row
                                div.col-5.fw-bold Race
                                div.col-7 #{race}
                            div.row
                                div.col
                                    br
                    div.row
                        if entityName
                            div.col.text-center.fst-italic <b>#{title} #{fullName}</b> is a representative of <b>#{entityName}</b>, registered with <span class="label">IdentifyMe</span>.
                        else
                            div.col.text-center.fst-italic <b>#{title} #{fullName}</b> is a registered individual with <span class="label">IdentifyMe</span>.